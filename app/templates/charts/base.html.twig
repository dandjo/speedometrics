{% extends 'base.html.twig' %}

{% block head %}
    <link href="https://cdn.anychart.com/releases/v8/css/anychart-ui.min.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.anychart.com/releases/v8/fonts/css/anychart-font.css" rel="stylesheet" type="text/css">
    <style>
        html, body, #app {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }

        html, input {
            font-family: Verdana,sans-serif;
            font-size: 15px;
            line-height: 1.5;
        }

        #menu {
            position: -webkit-sticky;
            position: sticky;
            top: 0;
            height: 50px;
            z-index: 1;
        }

        #chart {
            height: calc(100% - 50px);
        }

        #menu ul {
            margin: 0;
            padding: 0;
            list-style-type: none;
            overflow: hidden;
            background-color: #333;
        }
        #menu li {
            float: left;
            border-right: 1px solid #bbb;
        }
        #menu li:last-child {
            border-right: none;
        }
        #menu li.active {
            background-color: #4CAF50;
        }
        #menu li.search {
            float: right;
        }
        #menu li.search input {
            display: block;
            padding: 14px 16px;
            width: 300px;
            border: 0;
            background: #e8e8e8;
        }
        #menu li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        #menu li a:hover {
            background-color: #111;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="app">
        <div id="menu">
            <ul>
                <li v-for="item in menu" v-bind:class="{ 'active': item.link == '{{ path(app.request.attributes.get('_route')) }}' }">
                    <a :href="item.link">${ item.title }</a>
                </li>
                <li class="search">
                    <input type="text" name="search">
                </li>
            </ul>
        </div>
        <div id="chart"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script>
        var app = new Vue({
            el: '#app',
            delimiters: ['${', '}'],
            data: {
                menu: []
            },
            methods: {
                getjson: function(url, callback) {
                    var xhr = new XMLHttpRequest();
                    xhr.open('get', url, true);
                    xhr.responseType = 'json';
                    xhr.onload = function() {
                        callback(xhr);
                    };
                    xhr.send();
                }
            }
        });

        app.getjson('{{ path('api.menu') }}', function(xhr) {
            if (xhr.status === 200) {
                app.menu = xhr.response.data.items;
            }
        });
    </script>
    <script src="https://cdn.anychart.com/releases/v8/js/anychart-base.min.js"></script>
    <script src="https://cdn.anychart.com/releases/v8/js/anychart-ui.min.js"></script>
{% endblock %}
