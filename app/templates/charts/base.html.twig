{% extends 'base.html.twig' %}

{% block head %}
    <link href="https://cdn.anychart.com/releases/v8/css/anychart-ui.min.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.anychart.com/releases/v8/fonts/css/anychart-font.css" rel="stylesheet" type="text/css">
    <style>
        html, body, #app, #container {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }

        ul {
            font-family: Verdana,sans-serif;
            font-size: 15px;
            line-height: 1.5;
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
            position: -webkit-sticky;
            position: sticky;
            top: 0;
            z-index: 1;
        }
        li {
            float: left;
            border-right: 1px solid #bbb;
        }
        li:last-child {
            border-right: none;
        }
        li.active {
            background-color: #4CAF50;
        }
        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        li a:hover {
            background-color: #111;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="app">
        <ul>
            <li v-for="item in menu" v-bind:class="{ 'active': item.link == '{{ path(app.request.attributes.get('_route')) }}' }">
                <a :href="item.link">${ item.title }</a>
            </li>
        </ul>
        <div id="container"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script src="https://cdn.anychart.com/releases/v8/js/anychart-base.min.js"></script>
    <script src="https://cdn.anychart.com/releases/v8/js/anychart-ui.min.js"></script>
    <script>
        var app = new Vue({
            el: '#app',
            delimiters: ['${', '}'],
            data: {
                menu: []
            },
            methods: {
                getjson: function(url, callback) {
                    var xhr = new XMLHttpRequest();
                    xhr.open('get', url, true);
                    xhr.responseType = 'json';
                    xhr.onload = function() {
                        callback(xhr);
                    };
                    xhr.send();
                }
            }
        });

        app.getjson('{{ path('api.menu') }}', function(xhr) {
            if (xhr.status === 200) {
                app.menu = xhr.response.data;
            }
        });
    </script>
{% endblock %}
